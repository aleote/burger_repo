 <div class="container">
    <div class="row">
        <h1 align="center">Burger Time</h1>
    </div>
    <br>
    <div class="row text-center">
        <img src="https://img.buzzfeed.com/buzzfeed-static/static/2014-03/tmp/webdr03/26/10/08687e52283ef2b2bfb77f752265e901-19.jpg?downsize=715:*&output-format=auto&output-quality=auto" alt="burger-picture" class="text-center" style="width: 213px">
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-6">
            <div id="not-devoured">
              {{#each burgers}}
                  {{#unless this.devoured}}
                    <div class="alert alert-success" align="center" role="alert">
                         <p>
                             {{this.id}}.   {{this.burger_name}}
                            <button class="devour" data-id="{{this.id}}">Devour</button>
                         </p>
                    </div>
                  {{/unless}}   
              {{/each}}
            </div>
        </div>
        <div class="col-md-6">
            <div id="not-devoured">
              {{#each burgers}}
                  {{#if this.devoured}}
                     <div class="alert alert-danger" align="center" role="alert">
                         <p>
                             {{this.id}}.   {{this.burger_name}}
                         </p>
                     </div>
                  {{/if}}   
              {{/each}}
            </div>
        </div>
    </div>
    <br>
    <hr>
    <div class="row" align="center">
        <form action="/api/burgers" method="POST">
            <input type="text" id="burger" name="burgers">
            <button type="submit" id="submit">Submit</button>
        </form>
    </div>
</div>
<style type="text/css">
    #burger-pic {
      display: flex;
      align-items: center;
      justify-content: center;
    }

</style>
<script type="text/javascript">
    $("#submit").on("click", function(event){
        event.preventDefault();
        var newBurger = {
            name: $("#burger").val().trim()
        };
        //Send off Post
        $.ajax("/burgers/create", {
            type: "POST",
            data: newBurger
        }).done(function(){
            location.reload()
            }
        )
    });




    $(".devour").on("click", function(event){
        event.preventDefault();
        var iD = $(this).data("id");

        var devourState = {
            id: iD
        };

        $.ajax("/api/burgers", {
            type: "PUT",
            data: devourState
        }).then(function(){
            location.reload()

        })
        

    })
</script>
